{
  "name": "persian-components",
  "files": [
    "dist"
  ],
  "type": "module",
  "version": "0.0.8",
  "main": "./dist/persian-components.umd.cjs",
  "module": "./dist/persian-components.js",
  "description": "common persian components for vue 3",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only && node ./scripts/copy.js",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "generate:types": "vue-tsc --declaration --emitDeclarationOnly --outdir ./dist",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write ./"
  },
  "dependencies": {
    "date-fns-jalali": "^2.30.0-0",
    "tailwindcss": "^3.3.2",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@babel/types": "^7.22.5",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.17",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "~5.0.4",
    "vite": "^4.3.9",
    "vitest": "^0.32.0",
    "vue-tsc": "^1.6.5"
  },
  "exports": {
    ".": {
      "import": "./dist/persian-components.js",
      "require": "./dist/persian-components.umd.cjs",
      "types": "./dist/persian-components.d.ts"
    },
    "./style.css": "./dist/style.css",
    "./dev": "./packages/index.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IlrichlI/persian-components"
  },
  "keywords": [
    "jalali",
    "jalaali",
    "jalaali date picker",
    "jalali date picker",
    "persian date picker",
    "persian",
    "persian components",
    "persian component",
    "persian tools",
    "persian tool"
  ],
  "homepage": "https://github.com/IlrichlI/persian-components#readme",
  "author": "Ali Aslani <aliaslani.mm@gmail.com> (https://www.linkedin.com/in/ialiaslani/)",
  "bugs": {
    "url": "https://github.com/IlrichlI/persian-components/issues"
  },
  "directories": {
    "doc": "./packages",
    "main": "./packages"
  },
  "license": "MIT"
}
